{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noResolve": false,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "typingOptions": {
    "enableAutoDiscovery": true
  }
}